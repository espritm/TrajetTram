<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:animateLayoutChanges="true"
    android:id="@+id/activitytrajetDetails_layout_root" >
  <RelativeLayout
      android:layout_width="@dimen/activitytrajetDetails_listview_width"
      android:layout_height="match_parent"
      android:id="@+id/activitytrajetDetails_layout_listviewArret" 
      android:layout_alignParentTop="true"
      android:animateLayoutChanges="true">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/activitytrajetDetails_modeConduite_layout_currentStop_height"
      android:id="@+id/activitytrajetDetails_modeConduite_layout_currentStop"
      android:layout_alignParentBottom="true"
      android:background="@color/primary_dark"
      android:visibility="gone">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activitytrajetDetails_modeConduite_layout_currentStopInfos"
        android:layout_margin="5dp"
        android:background="@color/white" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          <RelativeLayout
              android:id="@+id/activitytrajetDetails_arret_layout_generalInfos"
              android:layout_width="@dimen/activitytrajetDetails_modeConduite_layout_GeneralInfo_width"
              android:layout_height="match_parent"
              android:paddingRight="10dp"
              android:paddingTop="25dp"
              android:animateLayoutChanges="true"
            android:layout_alignParentLeft="true"
              android:layout_toLeftOf="@+id/activitytrajetDetails_arret_layout_horaire" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activitytrajetDetails_arret_textview_name"
                android:gravity="left"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/trajetdetails_Big_textsize" />
          </RelativeLayout>
          <LinearLayout
              android:id="@+id/activitytrajetDetails_arret_layout_horaire"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@color/listview_detailtrajets_lightgrey"
              android:paddingTop="25dp"
            android:layout_alignParentRight="true"
              android:layout_gravity="center_horizontal" >
            <TextView
                android:layout_width="@dimen/activitytrajetDetails_modeConduite_column_Horaire_width"
                android:layout_height="wrap_content"
                android:textSize="@dimen/trajetdetails_Big_textsize"
                android:id="@+id/activitytrajetDetails_arret_textview_horairePassage"
                android:gravity="center" />
          </LinearLayout>
        </RelativeLayout>
      </LinearLayout>
    </LinearLayout>
    <android.support.v4.widget.SwipeRefreshLayout
      android:id="@+id/activitytrajetDetails_refresher"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@id/activitytrajetDetails_modeConduite_layout_currentStop">
    <ListView
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activitytrajetDetails_listview"
        android:choiceMode="singleChoice" />
  </android.support.v4.widget.SwipeRefreshLayout>
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:animateLayoutChanges="true"
      android:layout_toRightOf="@id/activitytrajetDetails_layout_listviewArret"
      android:layout_alignParentRight="true"
      android:orientation="vertical" >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/activitytrajetDetails_layout_trajetGlobalInfos"
      android:background="@color/primary_dark"
      android:orientation="vertical"
      android:padding="5dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentTop="true">
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
          android:id="@+id/activitytrajetDetail_layout_locotype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
          <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/activitytrajetDetails_textview_ehouatRefNumber"
          android:textColor="@color/white"/>
          <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:src="@drawable/ic_train_white_24dp"/>
          <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/activitytrajetDetails_textview_train"
          android:textColor="@color/white"
          android:layout_marginLeft="5dp"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activitytrajetDetails_textview_locoType"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activitytrajetDetails_textview_tonnage"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"/>
      </LinearLayout>
        <LinearLayout
          android:layout_below="@+id/activitytrajetDetail_layout_locotype"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:layout_marginTop="15dp">
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/activitytrajetDetails_layout_GoToNextStep"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_gravity="left">
                <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_fast_forward_white_24dp"/>
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:text="@string/activitytrajetDetails_textview_nextStep"
                  android:textColor="@color/white"/>
          </LinearLayout>
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/activitytrajetDetails_layout_GPS"
              android:orientation="horizontal"
              android:layout_gravity="left" >
                <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/activitytrajetDetails_imageview_GPSStatus"
                  android:src="@drawable/ic_gps_not_fixed_white_24dp"/>
                <LinearLayout
                  android:id="@+id/activitytrajetDetails_layout_GPSlevel"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dp"
                  android:orientation="horizontal"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center_horizontal" />
          </LinearLayout>
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/activitytrajetDetails_layout_altimeter"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_marginLeft="15dp"
              android:layout_gravity="left" >
                <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_help_black_18dp"
                  android:id="@+id/activitytrajetDetails_imageview_altimeter"
                  android:tint="@color/white"/>
                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:id="@+id/activitytrajetDetails_textview_altimeter"
                  android:text="@string/activitytrajetDetails_textview_altimeter_unknown"
                  android:textColor="@color/white"/>
            </LinearLayout>
            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_radio_white_24dp"
              android:layout_marginLeft="50dp"
              android:layout_gravity="right"
              android:visibility="gone"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/activitytrajetDetails_textview_radio"
              android:textColor="@color/white"
              android:layout_marginLeft="5dp"
              android:layout_gravity="right"
              android:visibility="gone"/>
        </LinearLayout>
      </RelativeLayout>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/activitytrajetDetails_textview_locationStart"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:layout_alignParentLeft="true"/>
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/activitytrajetDetails_textview_timeStart"
          android:textColor="@color/white"
          android:layout_alignParentRight="true"/>
      </RelativeLayout>
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activitytrajetDetails_textview_locationEnd"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activitytrajetDetails_textview_timeEnd"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"/>
      </RelativeLayout>
      <LinearLayout
        android:id="@+id/activitytrajetDetails_layout_minutesBeforeStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" >
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/activitytrajetDetails_textview_minutesBeforeStart"
          android:textColor="@color/white" />
      </LinearLayout>
      <RelativeLayout
          android:id="@+id/activitytrajetDetails_layout_nextStop"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="right"
          android:paddingTop="20dp"
          android:paddingBottom="5dp" >
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/activitytrajetDetails_textview_nextStop_title"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:layout_alignParentLeft="true" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/activitytrajetDetails_textview_nextStop_hour"
          android:textColor="@color/white"
           android:layout_alignParentRight="true" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/activitytrajetDetails_textview_nextStop_miuntesAvanceRetard"
          android:layout_alignParentLeft="true"
          android:layout_below="@id/activitytrajetDetails_textview_nextStop_title"
          android:textColor="@color/green"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="5dp"
          android:textStyle="bold"
          android:textSize="22sp" />
      </RelativeLayout>
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:id="@+id/activitytrajetDetails_btn_validePreparation"
          android:text="@string/activitytrajetDetails_btn_validePreparation"
          android:theme="@style/ButtonRedBackground"
          android:visibility="gone"/>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>